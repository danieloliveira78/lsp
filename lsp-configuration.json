{
    "comments": {
        "blockComment": [ "/*", "*/" ]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["Inicio", "Fim"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
		{ "open": "'", "close": "'", "notIn": ["string", "comment"] },
		{ "open": "\"", "close": "\"", "notIn": ["string"] },
		{ "open": "`", "close": "`", "notIn": ["string", "comment"] },
		{ "open": "@", "close": "@", "notIn": ["string", "comment"] },
		{ "open": "/**", "close": " */", "notIn": ["string"] },
		{ "open": "Inicio", "close": " Fim;", "notIn": ["string", "comment"] }
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "indentationRules": {
        "increaseIndentPattern": "^((?!\\/\\/).)*(\\{[^}\"'`]*|\\([^)\"'`]*|\\[[^\\]\"'`]*|(inicio|Inicio))$",
        "decreaseIndentPattern": "^((?!.*?\\/\\*).*\\*/)?\\s*[\\)\\}\\]].*$"
    },
    "folding": {
        "markers": {
          "start": "^\\s*@--\\s*#?(bloco|Bloco)\\b(\\s\\'.*\\')?\\s*--@",
          "end": "^\\s*@--\\s*#?(fimbloco|FimBloco|Fimbloco)\\b(\\s\\'.*\\')?\\s*--@"
        }
      }
}
